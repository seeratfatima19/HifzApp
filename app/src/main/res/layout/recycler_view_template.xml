<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/dateBox"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Date:"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.118"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.137" />

            <TextView
                android:id="@+id/dateView"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:hint="YYYY/MM/DD"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.413"
                app:layout_constraintStart_toEndOf="@+id/dateBox"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.137" />

            <TextView
                android:id="@+id/surahBox"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Surah:"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.111"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateBox"
                app:layout_constraintVertical_bias="0.158" />

            <TextView
                android:id="@+id/surahView"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:hint="10"
                android:textSize="20dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toEndOf="@+id/surahBox"
                app:layout_constraintTop_toBottomOf="@+id/dateView"
                app:layout_constraintVertical_bias="0.158" />

            <TextView
                android:id="@+id/paraBox"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Parah:"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.13"
                app:layout_constraintStart_toEndOf="@+id/surahView"
                app:layout_constraintTop_toBottomOf="@+id/dateView"
                app:layout_constraintVertical_bias="0.158" />

            <TextView
                android:id="@+id/paraView"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:hint="7"
                android:textSize="20dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.29"
                app:layout_constraintStart_toEndOf="@+id/paraBox"
                app:layout_constraintTop_toBottomOf="@+id/dateView"
                app:layout_constraintVertical_bias="0.158" />

            <TextView
                android:id="@+id/sabaqBox"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Sabaq:"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.107"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surahBox"
                app:layout_constraintVertical_bias="0.292" />

            <TextView
                android:id="@+id/sabaqView"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:hint="ayat 30-60"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.093"
                app:layout_constraintStart_toEndOf="@+id/sabaqBox"
                app:layout_constraintTop_toBottomOf="@+id/surahView"
                app:layout_constraintVertical_bias="0.29" />

            <TextView
                android:id="@+id/sabaqiBox"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Sabaqi:"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sabaqBox"
                app:layout_constraintVertical_bias="0.428" />

            <TextView
                android:id="@+id/sabqiView"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:hint="9"
                android:textSize="20dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.081"
                app:layout_constraintStart_toEndOf="@+id/sabaqiBox"
                app:layout_constraintTop_toBottomOf="@+id/sabaqView"
                app:layout_constraintVertical_bias="0.428" />

            <TextView
                android:id="@+id/manzilBox"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Manzil:"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.159"
                app:layout_constraintStart_toEndOf="@+id/sabqiView"
                app:layout_constraintTop_toBottomOf="@+id/sabaqView"
                app:layout_constraintVertical_bias="0.432" />

            <TextView
                android:id="@+id/manzilView"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:hint="6"
                android:textSize="20dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.384"
                app:layout_constraintStart_toEndOf="@+id/manzilBox"
                app:layout_constraintTop_toBottomOf="@+id/sabaqView"
                app:layout_constraintVertical_bias="0.428" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>